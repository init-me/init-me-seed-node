{
  "version": "0.1.0",
  "main": "output/index.js",
  "types": "output/index.d.ts",
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "yyl-react"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/output",
    "/test"
  ],
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "printWidth": 100
  },
  "scripts": {
    "bootstrap": "yarn install",
    "eslint": "eslint --ext=jsx,ts,tsx ./",
    "prettier": "prettier --write ./**",
    "dev": "rollup --config ./rollup.config.js",
    "d": "rollup --config ./rollup.config.js",
    "build": "cross-env NODE_ENV=production rollup --config ./rollup.config.js",
    "w": "rollup --watch --config ./rollup.config.js",
    "prepublishOnly": "npm run prettier & npm test & npm run doc",
    "doc": "typedoc src/index.ts --plugin typedoc-plugin-markdown",
    "test": "npm run build & jest ./test/jest/"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-yyl-react": "^2.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "rollup": "^2.66.0",
    "rollup-plugin-node-externals": "^3.1.2",
    "typescript": "^4.5.5"
  }
}
